pipeline {
    agent { label 'slave' }

    stages {
        stage('Deploy') {
            steps {
              sh 'docker kill $(docker ps -q) || echo "no running containers"'
              sh 'docker rmi -f $(docker images -aq)' || echo "no running images"'
              sh 'docker run -d -p 80:80 maks2531/makswebsite'
              }
          }
      }
 }
