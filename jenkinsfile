pipeline {
    agent maks

    stages {
        stage('Build') {
            steps {
                sh 'docker image ls'
                sh 'docker build -t makswebsite .'
            }
        }
        stage('test') {
            steps {
                sh 'docker image ls'
                sh 'docker tag makswebsite maks2531/makswebsite:lastles'
            }
        }
        stage('Push') {
            steps {
                withCredentials([string(credentialsId: 'maks2531', variable: 'dockerpwd')]) {
                    sh 'echo "${dockerpwd}" | docker login --username maks2531 --password-stdin'
                    sh 'docker push maks2531/makswebsite:lastles'
                }
            }
        }
        stage('Clean') {
            steps {
                sh 'docker rmi -f $(docker images -aq)'
            }
        }
    }
}
