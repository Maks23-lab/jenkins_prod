pipeline {
    agent { label 'master' }

    stages {
        stage('Build') {
            steps {
                sh 'docker image ls'
                sh 'docker build -t maks2531/makswebsite:latest -t maks2531/makswebsite:$BUILD_NUMBER.'
            }
        }
        stage('test') {
            steps {
                sh 'docker image ls'
            }
        }
        stage('Push') {
            steps {
                withCredentials([string(credentialsId: 'maks2531', variable: 'dockerpwd')]) {
                    sh 'echo "${dockerpwd}" | docker login --username maks2531 --password-stdin'
                    sh 'docker push maks2531/makswebsite:$BUILD_NUMBER'
                    build job: 'deploypipeline'
                }
            }
        }
    }
post { 
        always { 
            sh 'docker kill $(docker ps -q) ||echo "no running containers"'
            sh  'docker rmi -f $(docker images -aq)'
        }
    }
}
