pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t maskwebsite .'   
            }
        }
        stage('Push') {
            steps {
                withCredentials([string(credentialsId: 'maks2531', variable: 'dockerpwd')]) {
                    sh "docker login -u maks2531 -p ${dockerpwd}"
                    sh "docker push maks2351/makskwebsite:latest"
                }
            }
        }
        stage('Clean') {
            steps {
                sh 'docker rmi -f $(docker images -aq)'
            }
        }
    }
}



