pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t maskwebsite .'   
            }
        }
        stage('Push') {
            steps {
                withCredentials([string(credentialsId: 'DockerHubPwd', variable: 'dockerpwd')]) {
                    sh "docker login -u maks -p ${dockerpwd}"
                    sh "docker push maks/maskwebsite:latest"
                }
            }
        }
        stage('Clean') {
            steps {
                sh "docker rmi -f $(docker images -aq)"
            }
        }
    }
}



