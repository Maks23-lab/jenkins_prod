pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t maks2531/makswebsite:letest .'   
            }
        }
        stage('Push') {
            steps {
                withCredentials([string(credentialsId: 'docker-hub-maks', url: 'https://index.docker.io/v1/')]) {
                    sh '''
                        docker push maks2531/makswebsite:letest
                    '''
                }
            }
        }
        stage('Clean') {
            steps {
                sh 'docker rmi -f $(docker images -aq)'
            }
        }
    }
}



